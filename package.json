{
	"name": "invoice-app",
	"productName": "Invoice App",
	"author": "jakub godar",
	"description": "Invoice generator app for small businesses",
	"version": "1.0.1",
	"private": true,
	"devDependencies": {
		"@craco/craco": "^7.1.0",
		"@types/file-saver": "^2.0.7",
		"@types/lodash": "^4.14.202",
		"@types/node": "^18.11.10",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@types/react-router-dom": "^5.3.3",
		"autoprefixer": "^10.4.13",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0",
		"postcss": "^8.4.19",
		"prettier": "^2.8.0",
		"react-scripts": "^5.0.1",
		"rimraf": "^3.0.2",
		"tailwindcss": "3.2.4",
		"taze": "^0.8.4",
		"typescript": "^4.9.3",
		"wait-on": "^6.0.1"
	},
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"@radix-ui/react-alert-dialog": "^1.0.5",
		"@radix-ui/react-dialog": "^1.1.2",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-popover": "^1.0.7",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.0",
		"auto-launch": "^5.0.5",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"cmdk": "^0.2.1",
		"compute-cosine-similarity": "^1.1.0",
		"dotenv": "^16.4.3",
		"electron-is-dev": "^2.0.0",
		"electron-reloader": "^1.2.3",
		"electron-updater": "^5.3.0",
		"exceljs": "^4.4.0",
		"file-saver": "^2.0.5",
		"lodash": "^4.17.21",
		"lucide-react": "^0.340.0",
		"mathjs": "^12.3.2",
		"openai": "^4.27.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^4.7.1",
		"react-router-dom": "^6.4.4",
		"react-spinners": "^0.13.8",
		"react-toastify": "^9.1.1",
		"react-use": "^17.4.0",
		"tailwind-merge": "^2.5.5",
		"tailwindcss-animate": "^1.0.7",
		"xlsx": "^0.18.5"
	},
	"homepage": "./",
	"main": "public/electron.js",
	"scripts": {
		"dev": "concurrently \"npm run react:dev\" \"npm run electron:wait\"",
		"electron:wait": "wait-on http-get://localhost:3000 && npm run electron:dev",
		"prebuild": "rimraf build && rimraf dist",
		"react:dev": "cross-env BROWSER=none craco start",
		"react:build": "craco build",
		"electron:dev": "electron .",
		"electron:build": "electron-builder build --win --publish never",
		"electron:deploy": "electron-builder build --win --publish always",
		"build": "npm run prebuild && npm run react:build && npm run electron:build",
		"deploy": "npm run prebuild && npm run react:build && npm run electron:deploy",
		"format": "prettier --write .",
		"update": "taze latest -w"
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"build": {
		"appId": "com.jakubgodar.invoiceapp",
		"files": [
			"build/**/*",
			"public/electron.js",
			"package.json",
			"node_modules/**/*"
		],
		"extraResources": [
			{
				"from": "src/data/PersonalData.json",
				"to": "data/PersonalData.json"
			},
			{
				"from": "src/data/template.xlsx",
				"to": "data/template.xlsx"
			}
		]
	}
}
